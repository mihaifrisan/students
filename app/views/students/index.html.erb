<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
  </tr>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.email %></td>
      <td><%= link_to 'Edit', edit_student_path(student) %></td>
      <td><%= link_to 'Delete', student, method: :delete, confirm: 'Are you sure?' %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add student', new_student_path %>
